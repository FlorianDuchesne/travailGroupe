{% extends 'base.html.twig' %}

{% block title %}Détail d'une catégorie
{% endblock %}

{% block body %}
	<div class="container">
		<h2 class="text-center m-3">Détail d'une catégorie</h2>
		<button class="btn btn-info">
			<a class="text-white" href="{{ path('categorie') }}"><i class="fas fa-undo"></i></a>
		</button>
		<div class="card" style="width: 18rem;">
			<div class="card-body">
				<h2 class="card-title">{{ categorie.nom }}</h2>
				<h4 class="text-info text-center">Modules inclus :</h4>
				{% for module in categorie.modules %}
					<ul>
						<li><a class="text-body"href="{{ path('module_show',{id:module.id})}}">{{module}}</a></li>
					</ul>
				{% endfor %}
				{% if is_granted("ROLE_ADMIN") %}
					<div class="d-flex">
						<a class="btn btn-success text-white m-3" href="{{ path('categorie_edit', {'id':categorie.id}) }}">
							<i class="fas fa-edit"></i>
							{# Modifier #}
						</a>
						<a class="btn btn-danger text-white m-3" onclick="alert()" href="{{ path('categorie_delete', {'id':categorie.id}) }}">
							<i class="fas fa-trash-alt"></i>
							{# Supprimer #}
						</a>
					</div>
				{% endif %}
			</div>
		</div>

	</div>
{% endblock %}
