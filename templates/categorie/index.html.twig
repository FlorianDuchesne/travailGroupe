{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="text-center m-3">
			Liste des catégories</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom de la catégorie</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('categorie_show', {id: categorie.id}) }}">{{ categorie.nom }}</a>
						</td>
						<td>
							<button type="button" class="btn btn-warning">
								<a class=" text-white" href="{{ path('categorie_edit', {'id':categorie.id}) }}">Modifier</a>
							</button>
						</td>
						<td>
							<button type="button" class="btn btn-danger" onclick="alert()">
								<a class=" text-white" href="{{ path('categorie_delete', {'id':categorie.id}) }}">Supprimer</a>
							</button>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<button type="button" class="btn btn-success">
			<a class=" text-white" href="{{ path('categorie_add') }}">Ajouter</a>
		</button>
	</div>
{% endblock %}
