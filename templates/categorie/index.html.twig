{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!
{% endblock %}

{% block body %}
	<div class="container">
	    {# <button class="btn btn-info"><a class="text-white" href="{{ path('stagiaire') }}">Liste des stagiaires</a></button>
	    <button class="btn btn-info"><a class="text-white" href="{{ path('formation_index') }}">Liste des formations</a></button> #}

		<h1 class="text-center">Liste des catégories</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom de la catégorie</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						<td><a href = "{{ path('categorie_show', {id: categorie.id}) }}">{{ categorie.nom }}</a></td>

						{# <td>{{ formation.nom }} #}
						{# <td>{{ categorie.nom }}
						</td> #}
						<td>
							<button type="button" class="btn btn-warning">
								<a class=" text-white" href="{{ path('categorie_edit', {'id':categorie.id}) }}">Modifier</a>
							</button>
						</td>
						<td>
							<button type="button" class="btn btn-danger">
								<a class=" text-white" href="{{ path('categorie_delete', {'id':categorie.id}) }}">Supprimer</a>
							</button>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<button type="button" class="btn btn-success">
			<a class=" text-white" href="{{ path('categorie_add') }}">Ajouter</a>
		</button>
	</div>
{% endblock %}
