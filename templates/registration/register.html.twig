{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	{% if editMode %}
		<h1>Modifier profil</h1>
		{{ form_start(editUserForm) }}
		{{ form_row(editUserForm.pseudo) }}
		{{ form_row(editUserForm.nom) }}
		{{ form_row(editUserForm.prenom) }}
		{{ form_row(editUserForm.email) }}

		{{ form_row(editUserForm.agreeTerms) }}
		<button type="submit" class="btn">Modifier</button>
		{{ form_end(editUserForm) }}


	{% else %}
		<h1>Register</h1>

		{# {% endif %} #}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.pseudo) }}
		{{ form_row(registrationForm.nom) }}
		{{ form_row(registrationForm.prenom) }}

		{{ form_row(registrationForm.email) }}
		{# {% if editMode %} #}
		<a>Modifier mot de passe</a>
		{# {% else %} #}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn">Register</button>
		{{ form_end(registrationForm) }}

	{% endif %}


{% endblock %}
