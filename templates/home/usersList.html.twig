{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="text-center m-3">Liste des utilisateurs</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Pseudo</th>
					<th scope="col">Email</th>
					<th scope="col">Roles</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>
							{# {{ user.pseudo }} #}
							<a class="text-body" href="{{ path('userShow', {id: user.id}) }}">{{ user.pseudo }}</a>

						</td>
						<td>
							{{ user.email }}
						</td>
						<td>
						{{ user.listeRoles | raw }}

						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('home') }}">Retour</a>
	</div>
{% endblock %}
