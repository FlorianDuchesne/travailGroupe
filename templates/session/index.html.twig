{% extends 'base.html.twig' %}

{% block title %}Liste Sessions{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h1>Liste des sessions</h1>
{% for session in sessions %}
<div class="example-wrapper">
        <ul>
        <li>intitulé formation : <a href = "{{ path('session_show', {id: session.id}) }}">{{session.formation}}</a></li>
        <li>date début : {{ session.dateDebut | date('d-m-Y') }}</li>
        <li>date fin : {{ session.dateFin | date('d-m-Y') }}</li>
        <a class="btn btn-danger rounded-pill m-2" href="{{ path('session_delete', {'id':session.id}) }}">Supprimer la session</a>
        </ul>
</div>
{% endfor %}
<a class="btn btn-success rounded-pill" href="{{ path('session_add') }}">Rajouter une session</a>
{% endblock %}
