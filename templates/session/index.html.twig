{% extends 'base.html.twig' %}

{% block title %}Liste Sessions
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<h1 class="text-center m-3">Liste des sessions</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Intitulé</th>
					<th scope="col">Date de début</th>
					<th scope="col">Date de fin</th>
					{% if is_granted("ROLE_ADMIN") %}
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				{% for session in sessions %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('session_show', {id: session.id}) }}">{{session.formation}}</a>
						</td>
						<td>
							{{ session.dateDebut | date('d-m-Y') }}
						</td>
						<td>
							{{ session.dateFin | date('d-m-Y') }}
						</td>
						{% if is_granted("ROLE_ADMIN") %}
							<td>
								<a class="btn btn-warning" href="{{ path('session_edit', {'id':session.id}) }}">Modifier</a>
							</td>
							<td>
								<a class="btn btn-danger" onclick="alert()" href="{{ path('session_delete', {'id':session.id}) }}">Supprimer</a>
							</td>
						{% endif %}
					</tr>
				</div>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-success" href="{{ path('session_add') }}">Ajouter une session</a>
	{# <a class="btn btn-secondary" href="{{ path('inscrit_add') }}">Ajouter un stagiaire à une session</a> #}
{% endblock %}
