{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!
{% endblock %}

{% block body %}

	<div class="container">

		<h1 class="text-center m-3">Liste des formations</h1>
		{% if is_granted("ROLE_ADMIN") %}
			<button type="button" class="btn btn-success">
				<a class=" text-white" href="{{ path('formation_add') }}">Ajouter une formation</a>
			</button>
		{% endif %}
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom de la formation</th>
					<th scope="col">Descriptif</th>
					{% if is_granted("ROLE_ADMIN") %}
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					{% endif %}
				</tr>
			</thead>
			<tbody>
				{% for formation in formations %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('formation_show', {id: formation.id}) }}">{{ formation.nom }}</a>
						</td>

						<td>{{ formation.descriptif }}
						</td>
						{% if is_granted("ROLE_ADMIN") %}
							<td>
							{# ***************Debut bouton écriture entière modifier********************************** #}
								{# <button type="button" class="btn btn-warning">
									<a class=" text-white" href="{{ path('formation_edit', {'id':formation.id}) }}">Modifier</a>
								</button> #}
								{# ************Fin bouton écriture entière************************************* #}
								{# ********* Début bouton symbole modifier ****************#}
								<a class="btn btn-success text-white m-3" href="{{ path('formation_edit', {'id':formation.id}) }}">
							<i class="fas fa-edit"></i>
							{# Modifier #}
						</a>
						{# ************ Fin bouton symbole ************************#}

							</td>
							<td>

							{# ****** Debut bouton écriture entière supprimer ******************** #}
								{# <button type="button" class="btn btn-danger" onclick="alert()">
									<a class=" text-white" href="{{ path('formation_delete', {'id':formation.id}) }}">Supprimer</a>
								</button> #}
								{# ****** Fin bouton écriture entière ****************** #}

								{# ********* Début bouton symbole corbeille ****************#}
								<a class="btn btn-danger text-white m-3" onclick="alert()" href="{{ path('formation_delete', {'id':formation.id}) }}">
							<i class="fas fa-trash-alt"></i>
						</a>
						{# ************ Fin bouton symbole ************************#}
							</td>

						{% endif %}
					</tr>
				{% endfor %}

			</tbody>
		</table>
	</div>
{% endblock %}
