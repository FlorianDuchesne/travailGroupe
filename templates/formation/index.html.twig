{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!
{% endblock %}

{% block body %}
	<div class="container">
	    <button class="btn btn-info"><a class="text-white" href="{{ path('stagiaire') }}">Liste des stagiaires</a></button>

		<h1 class="text-center">Liste des formations</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Nom de la formation</th>
					<th scope="col">Descriptif</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for formation in formations %}
					<tr>
						<td><a href = "{{ path('formation_show', {id: formation.id}) }}">{{ formation.nom }}</a></td>

						{# <td>{{ formation.nom }} #}
						<td>{{ formation.descriptif }}
						</td>
						<td>
							<button type="button" class="btn btn-warning">
								<a class=" text-white" href="{{ path('formation_edit', {'id':formation.id}) }}">Modifier</a>
							</button>
						</td>
						<td>
							<button type="button" class="btn btn-danger">
								<a class=" text-white" href="{{ path('formation_delete', {'id':formation.id}) }}">Supprimer</a>
							</button>
						</td>
					</tr>
				{% endfor %}

			</tbody>
		</table>
		<button type="button" class="btn btn-success">
			<a class=" text-white" href="{{ path('formation_add') }}">Ajouter</a>
		</button>
	</div>
{% endblock %}
