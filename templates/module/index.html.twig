{% extends 'base.html.twig' %}

{% block title %}
	Liste modules
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{# <!-- TestModal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLabel">Suppression irréversible</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
						</div>
						<div class="modal-body">
							<p>Êtes-vous sûr de vouloir effectuer cette action ?</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
							<button type="button" class="btn btn-primary">Oui</button>
						</div>
					</div>
				</div>
			</div> #}

	<div class="container">
		<h1 class="text-center m-3">Liste des modules</h1>
		{# <table class="table table-striped table-hover table-sm"> #}
		<table class="table table-hover">

			<thead>
				<tr>
					<th scope="col">Intitulé :</th>
					<th scope="col">Descriptif :</th>
					<th scope="col">Catégorie :</th>
					<th scope="col">Modifier :</th>
					<th scope="col">Supprimer :</th>
				</tr>
			</thead>
			<tbody>
				{% for module in modules %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('module_show', {id: module.id}) }}">{{module.libelle}}</a>
						</td>
						<td>{{ module.descriptif }}</td>
						<td>
							<a class="text-body" href="{{ path('categorie_show', {id:module.categorie.id})}}">{{ module.categorie.nom }}</a>
						</td>
						<td>
							<a class="btn btn-warning" href="{{ path('module_edit', {'id':module.id}) }}">Modifier</a>
						</td>
						<td>
							<a class="btn btn-danger" {# data-toggle="modal" data-target="#exampleModal" #} href="{{ path('module_delete', {'id':module.id}) }}">Supprimer</a>
						</td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-success" href="{{ path('module_add') }}">Ajouter un module</a>
	</div>
{% endblock %}
