{% extends 'base.html.twig' %}

{% block title %}
	Liste modules
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="container">
		<h1 class="text-center">Liste des modules</h1>
		{# <table class="table table-striped table-hover table-sm"> #}
		<table class="table table-hover">

			<thead>
				<tr>
					<th scope="col">Intitulé :</th>
					<th scope="col">Descriptif :</th>
					<th scope="col">Catégorie :</th>
					<th scope="col">Modifier :</th>
					<th scope="col">Supprimer :</th>
				</tr>
			</thead>
			<tbody>
				{% for module in modules %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('module_show', {id: module.id}) }}">{{module.libelle}}</a>
						</td>
						<td>{{ module.descriptif }}</td>
						<td>{{ module.categorie.nom }}</td>
						<td><a class="btn btn-warning" href="{{ path('module_edit', {'id':module.id}) }}">Modifier</a></td>
						<td><a class="btn btn-danger" href="{{ path('module_delete', {'id':module.id}) }}">Supprimer</a></td>

					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a class="btn btn-success" href="{{ path('module_add') }}">Ajouter un module</a>
	</div>
{% endblock %}
