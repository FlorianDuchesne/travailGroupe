{% extends 'base.html.twig' %}

{% block title %} Liste modules {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-info m-3">Liste des modules</h1>
    <table class="table table-striped table-hover table-sm">
    <thead>
    <tr>
    <td>intitulé :</td>
    <td>descriptif :</td>
    <td>catégorie :</td>
    </tr>
    <tbody>
{% for module in modules %}
        <tr>
        <td><a href = "{{ path('module_show', {id: module.id}) }}">{{module.libelle}}</a></td>
        <td>{{ module.descriptif }}</td>
        <td>{{ module.categorie.nom }}</td>
        </tr>
</div>
{% endfor %}
</tbody>
</table>
<a class="btn btn-success rounded-pill" href="{{ path('module_add') }}">Rajouter un module</a>
{% endblock %}
