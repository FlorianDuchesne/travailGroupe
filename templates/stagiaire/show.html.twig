{% extends 'base.html.twig' %}

{% block title %}{{ stagiaire}}{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <button class="btn btn-info"><a class="text-white" href="{{ path('stagiaire') }}">Retour à la liste</a></button>

<h1 class="text-info">{{ stagiaire}}</h1>
<ul>
        <li>Date de naissance : {{stagiaire.dateNaissance | date('d-m-Y') }}</li>
        <li>Adresse : {{stagiaire.adresse ~ ' ' ~ stagiaire.codePostal ~ ' ' ~ stagiaire.ville }}</li>
        <li>Courriel : {{stagiaire.courriel }}</li>
        <li>Genre : {{stagiaire.sexe }}</li>
</ul>
        <h2 class="text-info">Sessions prévues :</h2>
        {% for session in stagiaire.sessions %}
        <ul>
        <li>{{session}}</li>
        </ul>
        {% endfor %}
        <a class="btn btn-warning rounded-pill m-2" href="{{ path('stagiaire_edit', {'id':stagiaire.id}) }}">Modifier les informations</a>
        <a class="btn btn-danger rounded-pill m-2" href="{{ path('stagiaire_delete', {'id':stagiaire.id}) }}">Supprimer le stagiaire</a>
</div>
{% endblock %}
