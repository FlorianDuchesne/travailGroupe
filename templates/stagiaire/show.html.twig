{% extends 'base.html.twig' %}

{% block title %}
	{{ stagiaire}}
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="container">
		<h2 class="text-center">Fiche descriptive</h2>

		<button class="btn btn-info">
			<a class="text-white" href="{{ path('stagiaire') }}">Retour à la liste</a>
		</button>
		<div class="card" style="width: 18rem;">
			<div class="card-body">
				<h2 class="card-title">{{ stagiaire }}</h2>

				{# <h1 class="text-info">{{ stagiaire}}</h1> #}
				<ul>
					<li>Date de naissance :<br>
						{{stagiaire.dateNaissance | date('d-m-Y') }}</li>
					<li>Adresse :<br>
						{{stagiaire.adresse ~ ' ' ~ stagiaire.codePostal ~ ' ' ~ stagiaire.ville }}</li>
					<li>Courriel :<br>
						{{stagiaire.courriel }}</li>
					<li>Genre :<br>
						{{stagiaire.sexe }}</li>
				</ul>
				<h4 class="text-info text-center">Sessions prévues :<br></h4>


				{% if stagiaire.sessions is empty %}
					<li>Pas incrit à une session pour le moment</li>
				{% else %}
					{% for session in stagiaire.sessions %}

						<ul>
							<li><a class="text-info"href="{{ path('session_show', {id:session.id})}}">{{session}}</a></li>
						</ul>
					{% endfor %}
				{% endif %}


			</div>
		{% endblock %}
