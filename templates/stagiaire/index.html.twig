{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires catalogués
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div
		class="container">
		{# <button class="btn btn-info"><a class="text-white" href="{{ path('formation_index') }}">Liste des formations</a></button>
								    <button class="btn btn-info"><a class="text-white" href="{{ path('categorie') }}">Liste des catégories</a></button> #}

		<h1 class="text-center m-3">Liste des stagiaires catalogués</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Identité</th>
					<th scope="col">Date de naissance</th>
					<th scope="col">Adresse</th>
					<th scope="col">Courriel</th>
					<th scope="col">Genre</th>
					<th scope="col">Modifier</th>
					<th scope="col">Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for stagiaire in stagiaires %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('stagiaire_show', {id: stagiaire.id}) }}">{{stagiaire.prenom ~ ' ' ~ stagiaire.nom}}</a>
						</td>
						<td>{{stagiaire.dateNaissance | date('d-m-Y') }}</td>
						<td>{{stagiaire.adresse ~ ' ' ~ stagiaire.codePostal ~ ' ' ~ stagiaire.ville }}</td>
						<td>{{stagiaire.courriel }}</td>
						<td>{{stagiaire.sexe }}</td>
						<td>
							<a class="btn btn-warning" href="{{ path('stagiaire_edit', {'id':stagiaire.id}) }}">Modifier</a>
						</td>
						<td>
							<a class="btn btn-danger" href="{{ path('stagiaire_delete', {'id':stagiaire.id}) }}">Supprimer</a>
						</td>
					{% endfor %}
				</tr>
			</tbody>
		</table>
		<a class="btn btn-success" href="{{ path('stagiaire_add') }}">Ajouter un stagiaire</a>
	</div>
{% endblock %}
