{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires catalogués{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1 class="text-info m-3">Liste des stagiaires catalogués</h1>
<table class="table table-striped table-hover table-sm">
<thead>
<tr>
<td>Identité</td>
<td>Date de naissance</td>
<td>Adresse</td>
<td>Courriel</td>
<td>Genre</td>
</tr>
</thead>
<tbody>
{% for stagiaire in stagiaires %}
<tr>
<td><a href = "{{ path('stagiaire_show', {id: stagiaire.id}) }}">{{stagiaire.prenom ~ ' ' ~ stagiaire.nom}}</a>
</td>
        <td>{{stagiaire.dateNaissance | date('d-m-Y') }}</td>
        <td>{{stagiaire.adresse ~ ' ' ~ stagiaire.codePostal ~ ' ' ~ stagiaire.ville }}</td>
        <td>{{stagiaire.courriel }}</td>
        <td>{{stagiaire.sexe }}</td>
{% endfor %}
</tr>
</tbody>
</table>
<a class="btn btn-success rounded-pill" href="{{ path('stagiaire_add') }}">Rajouter un stagiaire</a>
</div>
{% endblock %}
