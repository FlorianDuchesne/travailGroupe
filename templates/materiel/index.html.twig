{% extends 'base.html.twig' %}

{% block title %}Liste des matériels
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="text-center m-3">Liste des matériels</h1>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Dénomination</th>
					<th scope="col">Quantité</th>
					{# {% if is_granted("ROLE_ADMIN") %}
											<th scope="col">Modifier</th>
											<th scope="col">Supprimer</th>
										{% endif %} #}
				</tr>
			</thead>
			<tbody>
				{% for materiel in materiels %}
					<tr>
						<td>
							<a class="text-body" href="{{ path('materiel_show', {id: materiel.id}) }}">{{materiel.denomination}}</a>
						</td>
						<td>
							{{ materiel.quantite }}
						</td>
						{# {% if is_granted("ROLE_ADMIN") %}
													<td>
														<a class="btn btn-warning" href="{{ path('materiel_edit', {'id':materiel.id}) }}">Modifier</a>
													</td>
													<td>
														<a class="btn btn-danger" onclick="alert()" href="{{ path('materiel_delete', {'id':materiel.id}) }}">Supprimer</a>
													</td>
												{% endif %} #}
					</tr>
				{% endfor %}
			</tbody>
		</table>
		{% if is_granted("ROLE_ADMIN") %}
		
				<a class="btn btn-success" href="{{ path('materiel_add') }}">Ajout d'un matériel</a>
			{% endif %}
	</div>
{% endblock %}
